{
  //"editor.rulers": [80],
  "editor.minimap.enabled": false,
  "editor.fontSize": 12,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "selection",
  "editor.tabCompletion": "on",
  "editor.minimap.side": "left",
  "editor.renderLineHighlight": "none",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 3,
  "editor.fontFamily": "Go Mono",
  "editor.fontWeight": "400",
  "editor.insertSpaces": false,
  "editor.codeLensFontSize": 10,
  "editor.codeLensFontFamily": "Go Mono",

  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  "workbench.editor.enablePreview": false,
  "workbench.activityBar.visible": false,
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",

  "window.menuBarVisibility": "toggle",

  "terminal.integrated.fontFamily": "Go Mono",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.defaultProfile.linux": "fish",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/usr/bin/bash",
      "icon": "terminal-bash"
    },
    "fish": {
      "path": "/usr/bin/fish",
      "icon": "terminal-ubuntu"
    }
  },

  "explorer.confirmDelete": false,

  "phpstan.memoryLimit": "2G",
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "intelephense.format.braces": "k&r",
  "intelephense.diagnostics.undefinedTypes": false,
  "intelephense.diagnostics.undefinedMethods": false,

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.nodePath": "/usr/local/bin/node",
  "eslint.runtime": "node",
  "eslint.validate": ["javascript"],
  "eslint.alwaysShowStatus": true,

  "emmet.includeLanguages": {
    "blade": "html",
    "vue-html": "html",
    "vue": "html"
  },

  // Other
  "extensions.ignoreRecommendations": true,
  "workbench.colorTheme": "Readable Code Material Darker"
}
