# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

general {  
  colors = false
  interval = 5
  color_good = "#50FA7B"
  color_degraded = "#FFB86C"
  color_bad = "#FF5555"
}

#order += "battery 0"
#order += "disk /"
#order += "ethernet _first_"
#order += "load"
order += "tztime local"
order += "read_file countdown"
order += "read_file lunch"

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "‚ö° CHR"
        status_bat = "üîã BAT"
        status_unk = "? UNK"
        status_full = "‚òª FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}


disk "/" {
  format = "DISK %percentage_used used, %percentage_free free"
}

ethernet _first_ {
  # if you use %speed, i3status requires root privileges
  format_up = "ETH: %ip (%speed)"
  format_down = "ETH: down"
}

load {
  format = "üñ•Ô∏è %1min"
}

tztime local {
  format = "%d.%m.%Y %H:%M:%S "
}

read_file countdown {
  format = " %content "
  path = "/home/olesla/workday-countdown.txt"
}

read_file lunch {
  format = " %content"
  path = "/home/olesla/whats_for_lunch_today.txt"
}
